{
  "extends": "@horse-racing/dev/config/tsconfig.json",
  "exclude": ["build/**/*", "**/build/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@horse-racing/contracts": ["packages/contracts/src"],
      "@horse-racing/contracts/*": ["packages/contracts/src/*"],
      "@horse-racing/contracts-exchange": ["packages/contracts-exchange/src"],
      "@horse-racing/contracts-exchange/*": ["packages/contracts-exchange/src/*"],
      "@horse-racing/dev": ["packages/dev"],
      "@horse-racing/dev/*": ["packages/dev/*"],
    },
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
